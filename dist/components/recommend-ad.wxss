/* start: ad-wrap*/
.ad-wrap {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  background: #f5f5f5; }
.ad-wrap.type-1 .ad-img {
    height: 240rpx; }
.ad-wrap.type-2 .ad-img {
    height: 240rpx;
    margin-right: 16rpx; }
.ad-wrap.type-2 .ad-img:last-child {
      margin-right: 0; }
.ad-wrap.type-7 .ad-img {
    height: 200rpx;
    margin-right: 16rpx; }
.ad-wrap.type-7 .ad-img:last-child {
      margin-right: 0; }
.ad-wrap .ad-img {
    display: block;
    width: 100%;
